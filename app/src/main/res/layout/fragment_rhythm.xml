<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rhythm.RhythmFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/barRhythm"
        android:background="?android:attr/windowBackground">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarRhythm"
            android:background="?android:attr/windowBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="-70dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PolyPhony"
                    android:layout_marginStart="40dp"
                    android:textSize="26dp"/>

                <ImageView
                    android:id="@+id/btnGoSearchRhythm"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_toStartOf="@id/btnGoNotificationsRhythm"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_search"/>

                <ImageView
                    android:id="@+id/btnGoNotificationsRhythm"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_toStartOf="@id/btnGoChatRhythm"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_notifications"/>

                <ImageView
                    android:id="@+id/btnGoChatRhythm"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_chat" />

            </RelativeLayout>

        </Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barRhythm"
        android:id="@+id/recyclerViewRhythm"/>

</RelativeLayout>