<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/musicRowMusicItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgAlbumeCoverMusicItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/imgAlbumeCoverMusicItem"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtMusicNameMusicItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="musicname"
            android:textColor="@color/design_default_color_primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSingerNameMusicItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="singername"
            android:textColor="@color/design_default_color_primary"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>