<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.maphomework.mypolyphonyapp.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_rhythm"
        android:name="com.maphomework.mypolyphonyapp.ui.rhythm.RhythmFragment"
        android:label="Rhythm"
        tools:layout="@layout/fragment_rhythm" />
    <fragment
        android:id="@+id/navigation_library"
        android:name="com.maphomework.mypolyphonyapp.ui.library.LibraryFragment"
        android:label="Library"
        tools:layout="@layout/fragment_library" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.maphomework.mypolyphonyapp.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_music_search"
        android:name="com.maphomework.mypolyphonyapp.ui.searchmusic.SearchMusicFragment"
        android:label="fragment_search_music"
